---
import { Image } from 'astro:assets';
import type { Publications } from '../pages/publications/publications'
import { kFormatter } from '../utils'
import GithubWhite from '@src/assets/img/github-mark-white.svg';
import GithubBlack from '@src/assets/img/github-mark.svg';

const { publications } = Astro.props

---
<div class="grid grid-cols-1 gap-5">
  {
    publications.map((publication: Publications) => 
      <div class="flex justify-between gap-10 border dark:border-zinc-700 rounded-xl shadow-sm p-5">
        <div>
            <img src={publication.image} alt="Publication" width="250" class="rounded"/>
        </div>
        <div class="flex-1">
        <div class="flex justify-between items-center">
          <div class='flex gap-2'>
            {
              (publication.tags || [] )?.map((tag: string) => (
                <span
                  class='border border-zinc-300 dark:border-zinc-700 rounded-2xl
                    text-sm text-zinc-700 dark:text-zinc-300 no-underline px-2 py-0.5
                    transition-all duration-700
                  hover:border-zinc-700 dark:hover:border-zinc-300'
                  >
                  {tag}
                </span>
              ))
            }
          </div>

          {publication.stargazers_count !== undefined && (
            <div class='shrink-0'>
              <a
                href={publication.html_url}
                target="_blank"
                class='border border-zinc-300 dark:border-zinc-700 rounded-2xl
                    text-xs text-zinc-700 dark:text-zinc-300 no-underline px-2 py-0.5
                    transition-all duration-700
                  hover:border-zinc-700 dark:hover:border-zinc-300
                    flex items-center gap-1
              '>
                <Image src={GithubBlack} height={12} class='dark:hidden' alt='Github stars' />
                <Image src={GithubWhite} height={12} class='hidden dark:block' alt='Github stars' />
                {kFormatter(publication.stargazers_count)} stars
              </a>
            </div>
          )}
        </div>
        <h3 class="font-semibold my-2">
          <a class="underline" href={publication.demoLink} target="_blank" rel={publication.demoLinkRel}>{publication.name}</a>
        </h3>
        <div class="line-clamp-2 text-zinc-600 dark:text-zinc-300 mb-4 min-h-[50px]">
          <p>{publication.description}</p>
        </div>
        <div class="flex justify-end gap-3">
          {
            publication.postLink &&
            <a class="underline flex items-center gap-2" href={publication.postLink}>
              Article
            </a>
          }
          {
            publication.demoLink &&  // This line adds the conditional check for the Demo link
            <a class="underline flex items-center gap-2" href={publication.demoLink} target="_blank" rel={publication.demoLinkRel}>
              Demo 
              <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-external-link"><path d="M15 3h6v6"/><path d="M10 14 21 3"/><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/></svg>
            </a>
          }
        </div>
        </div>
      </div>
    )
  }
</div>
