---
import FormattedDate from './FormattedDate.astro';
import type { CollectionEntry } from 'astro:content';

type BlogPost = CollectionEntry<'blog'>;
const { post }: Record<string, any> | { post: BlogPost } = Astro.props;
---
<a
  href={`/${post.slug}/`}
  class="post-card glass-panel flex items-center gap-2 p-2.5 md:p-3 hover:scale-[1.015] focus:outline-none focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:ring-zinc-400 dark:focus-visible:ring-zinc-500"
  aria-label={`Read ${post.data.title}`}
>
  <h3 class="font-semibold text-base grow leading-tight">
    <span class="post-title-link inline-flex items-center gap-1.5">{post.data.title}</span>
  </h3>
  <div class="text-zinc-700 text-sm text-right min-w-[5.5rem] dark:text-zinc-300 shrink-0 ml-auto">
    <FormattedDate date={post.data.pubDate} />
  </div>
</a>