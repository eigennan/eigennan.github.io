---
import FormattedDate from './FormattedDate.astro';
import type { CollectionEntry } from 'astro:content';

type BlogPost = CollectionEntry<'blog'>;
const { post }: Record<string, any> | { post: BlogPost } = Astro.props;
---
<div class="post-card glass-panel flex items-center gap-2 p-2.5 md:p-3 rounded-2xl border border-zinc-200/80 dark:border-zinc-700 shadow-sm transition-all duration-[220ms] hover:scale-[1.015] hover:shadow-xl hover:border-zinc-400 dark:hover:border-zinc-500">
  <h3 class="font-semibold text-base grow leading-tight">
    <a class="post-title-link inline-flex items-center gap-1.5" href={`/${post.slug}/`}>
      {post.data.title}
    </a>
  </h3>
  <div class="text-zinc-700 text-sm text-right min-w-[5.5rem] dark:text-zinc-300 shrink-0 ml-auto">
    <FormattedDate date={post.data.pubDate} />
  </div>
</div>