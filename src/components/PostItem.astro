---
import FormattedDate from './FormattedDate.astro';
import type { CollectionEntry } from 'astro:content';

type BlogPost = CollectionEntry<'blog'>;
const { post }: Record<string, any> | { post: BlogPost } = Astro.props;
---
<div class='flex items-start sm:items-center gap-2 border-b py-2 mb-1 capitalize dark:border-b-zinc-700'>
  <h3 class='font-medium grow'>
    <a class="post-title-link inline-flex items-center gap-1" href={`/${post.slug}/`}>
      {post.data.title}
    </a>
  </h3>
  <div class='text-zinc-700 text-sm text-right w-32 dark:text-zinc-300 shrink-0 ml-auto'>
    <FormattedDate date={post.data.pubDate} />
  </div>
</div>

<style>
  :global(:root) {
    --post-title-hover-scale: 1.03;
  }
  .post-title-link {
    transition: transform 110ms ease;
    /* transform-origin: left center; */
  }
  .post-title-link:hover {
    transform: scale(var(--post-title-hover-scale));
  }
</style>